<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Register Page</title>
</head>

<body>

    <div class="main-container d-flex justify-content-center">
        <div class="main-content">
            <div class='register-logo'>
                Registration
            </div>

            <div class="register-form">
                <form method="POST" action="/alert_page" class="needs-validation" id="register-form" novalidate>
                    <div class="register-form-input row">
                        <!-- Full name -->
                        <div class="register-input col-lg-6">
                            <label for="fullname" class="form-label">
                                Fullname
                                <b class="text-danger">*</b>
                            </label>
                            <input type="text" class="form-control" id="fullname" placeholder='Enter your full name'
                                required>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Gender -->
                        <div class="register-input col-lg-6">
                            <label for="gender" class="form-label">
                                Gender
                                <b class="text-danger">*</b>
                            </label>
                            <select class="form-control" name="gender" id="gender" required>
                                <option value="">-Select gender-</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Email -->
                        <div class="register-input col-lg-6">
                            <label for="email" class="form-label">
                                Email
                                <b class="text-danger">*</b>
                            </label>
                            <input type="email" class="form-control" id="email" placeholder='Enter your email' required>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Phone -->
                        <div class="register-input col-lg-6">
                            <label for="phone" class="form-label">
                                Phone
                                <b class="text-danger">*</b>
                            </label>
                            <input type="tel" class="form-control" id="phone" pattern="[0-9]{10}"
                                placeholder='Enter your phone' required>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Address -->
                        <div class="register-input col-lg-6">
                            <label for="address" class="form-label">
                                Address
                                <b class="text-danger">*</b>
                            </label>
                            <input type="text" class="form-control" id="address" placeholder='Enter your address'
                                required>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Birthday -->
                        <div class="register-input col-lg-6">
                            <label for="birthday" class="form-label">
                                Birthday
                                <b class="text-danger">*</b>
                            </label>
                            <input type="date" class="form-control" id="birthday" required>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Front ID -->
                        <div class="register-image col-lg-6">
                            <label for="upload-frontID" class="form-label">
                                Front ID
                                <b class="text-danger">*</b>
                            </label>
                            <img id="image-frontID">
                            <figcaption id="name-frontID"></figcaption>
                            <input type="file" class="form-control" id="upload-frontID" accept="image/*" required>
                            <span for="upload-frontID">
                                <i class='bx bx-upload'></i>
                                Choose a photo for Frontside ID
                            </span>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                        <!-- Back ID -->
                        <div class="register-image col-lg-6">
                            <label for="upload-backID" class="form-label">
                                Back ID
                                <b class="text-danger">*</b>
                            </label>
                            <img id="image-backID">
                            <figcaption id="name-backID"></figcaption>
                            <input type="file" class="form-control" id="upload-backID" accept="image/*" required>
                            <span for="upload-backID">
                                <i class='bx bx-upload'></i>
                                Choose a photo for Backside ID
                            </span>
                            <div class="invalid-feedback">Please enter your username !</div>
                        </div>

                    </div>

                    <div class="register-form-check">
                        <input type="checkbox" class="form-check-input" id="register-check" required>
                        <label for="register-check">
                            I am 18 years old or older and I accept to provide individual information for account
                            registration.
                            <b class="text-danger">*</b>
                        </label>
                        <div class="invalid-feedback">Please enter your username !</div>
                    </div>

                    <div>
                        <a href="/login">Have already an account</a>

                        <input type="submit" class="login-form-button login-btn" value="REGISTER">
                    </div>


                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/main.js"></script>
</body>

</html>