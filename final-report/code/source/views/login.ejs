<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Login Page</title>
</head>

<body>

    <div class="main-container d-flex justify-content-center">
        <div class="main-content row">
            <div class="login-logo col-lg-7 d-lg-block d-none">
                <img src="/photos/img_00.svg" alt="login-img">
            </div>

            <div class="login-form col-lg-5">
                <form method="POST" action="/" class="needs-validation" novalidate>
                    <img src="/photos/avatar.svg" alt="login-img">
                    <h3>WELCOME</h3>

                    <!-- Username -->
                    <div class="login-form-input">
                        <input type="text" class="form-control" id="username" required>
                        <i class='bx bx-user'></i>
                        <label for="username">Username</label>
                        <div class="invalid-feedback">Please enter your username !</div>
                    </div>

                    <!-- Password -->
                    <div class="login-form-input">
                        <input type="password" class="form-control" id="password" required>
                        <i class='bx bx-lock-alt'></i>
                        <label for="password">Password</label>
                        <div class="invalid-feedback">Please enter your password !</div>
                    </div>

                    <!-- Alert error -->
                    <div class="alert alert-danger" role="alert">
                        Your username or password is invalid !
                    </div>

                    <a href="/forgot_password">Forgot password ?</a>

                    <input type="submit" class="login-form-button login-btn" value="LOGIN">

                    <hr>
                    <a href="/register">
                        <input type="button" class="login-form-button register-btn" value="CREATE NEW ACCOUNT">
                    </a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/main.js"></script>
</body>

</html>